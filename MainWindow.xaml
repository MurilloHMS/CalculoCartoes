<Window x:Class="CalculoCartoesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculoCartoesWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Icon="/icone-proauto.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70*"/>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="450*"/>
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Top" Grid.ColumnSpan="5">
            <MenuItem Header="Opcoes">
                <MenuItem Header="Importar Arquivo Cartão"/>
                <MenuItem Header="Imprimir dados"/>
                <MenuItem Header="Sair" Click="Sair"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
